<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.eymen.filedecrypter.RegisterController">
   <children>
      <Label text="Register" />
      <TextField fx:id="userField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <PasswordField fx:id="passwordField2" promptText="Password again" />
      <CheckBox fx:id="notarCheck" mnemonicParsing="false" text="Use Notar" />
      <Button fx:id="registerbtn" onAction="#register" text="Register" />
      <Hyperlink fx:id="loginfromregister" onAction="#login" text="Login">
         <graphic>
            <Label text="Already registered?" />
         </graphic>
      </Hyperlink>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
